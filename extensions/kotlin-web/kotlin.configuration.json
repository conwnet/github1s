{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},   
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["<", ">"]
	],
	"autoClosingPairs": [
       { "open": "{", "close": "}" },
       { "open": "[", "close": "]" },
       { "open": "(", "close": ")" },
       { "open": "'", "close": "'", "notIn": ["string", "comment"] },
       { "open": "\"", "close": "\"", "notIn": ["string"] },
	   { "open": "/*", "close": " */", "notIn": ["string"] }
   ],
	"surroundingPairs": [
       ["{", "}"],
       ["[", "]"],
       ["(", ")"],
       ["<", ">"],
       ["'", "'"],
       ["\"", "\""]
   ],
   "folding": {
        "offSide": true,
        "markers": {
            "start": "^\\s*//\\s*#region",
            "end": "^\\s*//\\s*#endregion"
        }
    }
}